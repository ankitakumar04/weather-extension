{
    "manifest_version": 2,

    "name": "Something about weather",
    "description": "A weather app.",
    "version": "1.0",

    "browser_action": {
        "default_icon": {
            "19": "icons/favicons19/02.png",
            "38": "icons/favicons38/02.png"
        },
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["src/updateIcon.js"],
        "persistant": false
    },

    "permissions": [
        "http://api.openweathermap.org/data/2.5/*",
        "storage",
        "alarms"
    ]
}
