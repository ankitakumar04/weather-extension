{
    "manifest_version": 2,

    "name": "Something about weather",
    "description": "A weather app.",
    "version": "0.0.0.1",

    "icons": {
        "16": "icons/Sun16.png",
        "48": "icons/Sun48.png",
        "128": "icons/Sun128.png"
    },

    "browser_action": {
        "default_icon": {
            "19": "icons/favicons19/01.png",
            "38": "icons/favicons38/01.png"
        },
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["dist/updateIcon.js"],
        "persistant": false
    },

    "permissions": [
        "http://api.openweathermap.org/data/2.5/*",
        "storage",
        "alarms"
    ]
}
